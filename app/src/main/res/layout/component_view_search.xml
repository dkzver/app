<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="38dp"
        android:orientation="horizontal"
        android:background="@drawable/serach_background" android:gravity="center_vertical"
        android:id="@+id/view_container" android:padding="2dp">

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal" android:id="@+id/buttons_left" android:gravity="center_vertical">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/button_back" android:visibility="gone"
                      android:paddingTop="6dp" android:paddingBottom="6dp"
                      android:paddingLeft="6dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:background="@drawable/baseline_arrow_back_black_mini"
                       android:contentDescription="@string/todo"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/button_search" android:paddingBottom="6dp"
                      android:paddingTop="6dp" android:paddingLeft="6dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:background="@drawable/baseline_search_black_18dp"
                       android:contentDescription="@string/todo"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" android:gravity="center_vertical">
        <EditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTransparency"
                android:padding="6dp"
                android:hint="@string/label_search"
                android:singleLine="true"
                android:gravity="center_vertical" android:textSize="16sp" android:foregroundGravity="center_vertical"/>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="horizontal" android:layout_alignParentRight="true"
                      android:id="@+id/buttons_right" android:background="@color/colorWhite" android:paddingLeft="6dp"
                      android:layout_alignRight="@+id/edit_text"
                      android:gravity="center_vertical" android:foregroundGravity="center_vertical"
                      android:paddingTop="2dp">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/button_voice" android:paddingRight="6dp"
                          android:paddingBottom="6dp" android:paddingTop="6dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:background="@drawable/baseline_keyboard_voice_black_18dp"
                           android:contentDescription="@string/todo"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/button_clear_text" tools:visibility="gone"
                          android:paddingBottom="6dp" android:paddingTop="6dp" android:paddingRight="6dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:background="@drawable/baseline_clear_black_18dp"
                           android:contentDescription="@string/todo"/>
            </LinearLayout>
            <ProgressBar android:layout_width="20dp" android:layout_height="20dp"
                         android:id="@+id/progress_bar" android:layout_marginBottom="6dp"
                         android:layout_marginRight="6dp" android:layout_marginTop="6dp" android:visibility="gone"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/button_options" android:paddingBottom="6dp"
                          android:paddingRight="6dp" android:paddingTop="6dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:background="@drawable/baseline_more_vert_black_18dp"
                           android:contentDescription="@string/todo"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
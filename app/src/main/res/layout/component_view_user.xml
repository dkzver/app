<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="88dp"
             android:layout_height="104dp" android:padding="8dp">
    <RelativeLayout android:layout_width="72dp" android:layout_height="72dp" android:padding="4dp"
                    android:background="@drawable/user_background">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:background="@drawable/user_background2" android:padding="1dp">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                       android:id="@+id/image_view"
            />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="bottom">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/text_view"
                  android:text="Кирилл Циркунов" android:textSize="12sp" android:gravity="center_horizontal"
                  android:singleLine="true"/>
    </RelativeLayout>
</FrameLayout>
<!--                    android:id="@+id/view_add" android:layout_weight="1" android:gravity="center_horizontal">-->
<!--        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"-->
<!--                   app:srcCompat="@drawable/baseline_add_black_18dp" android:contentDescription="@string/todo"-->
<!--                   android:id="@+id/image_view_add"/>-->
<!--    </RelativeLayout>-->
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="8dp"
                    android:id="@+id/view_profile" android:layout_weight="1" android:gravity="center_horizontal">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   app:srcCompat="@drawable/baseline_account_circle_black_18dp"
                   android:contentDescription="@string/todo" android:id="@+id/image_view_profile"/>
    </RelativeLayout>
</LinearLayout>